{
  "compilerOptions": {
    "target": "ES2019",
    "incremental": true,
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "rootDirs": [ "./src"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
